.cc-cell {
  position: relative;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 32rpx;
  overflow: hidden;
  color: #323233;
  font-size: 14px;
  background-color: #fff;
}
.cc-cell-border::after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  right: 32rpx;
  bottom: 0;
  left: 32rpx;
  border-bottom: 1px solid #ebedf0;
  transform: scaleY(0.5);
}
.cc-cell-left-icon {
  margin-right: 8rpx;
  flex-shrink: 0;
}
.cc-cell-large {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}
.cc-cell-title, .cc-cell-value {
  flex: 1;
}
.cc-cell-title {
  display: flex;
  align-items: center;
}
.cc-cell-value {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: relative;
  overflow: hidden;
  color: #969799;
  text-align: right;
  vertical-align: middle;
  word-wrap: break-word;
}
.cc-cell-value-wrap {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.cc-cell-value .cc-cell-right-icon {
  position: relative;
  top: 2rpx;
  margin-left: 8rpx;
}
.cc-cell-label {
  margin-top: 8rpx;
  color: #969799;
  font-size: 12px;
  line-height: 36rpx;
}