
.bigImg {
		position: relative;
		width: 100%;
		height: 550rpx;
}
.bigImg image {
		width: 100%;
		height: 100%;
}
.user {
		position: absolute;
		left: 50%;
		top: 52rpx;
		display: flex;
		flex-direction: column;
		transform: translateX(-50%);
		align-items: center;
}
.user image {
		width: 265rpx;
		height: 268rpx;
		border-radius: 50%;
}
.username {
		margin-top: 26rpx;
		font-weight: 500;
		font-size: 46rpx;
		color: #ffffff;
}
.lc {
		position: absolute;
		background-color: #fff;
		left: 0;
		top: 80%;
		width: 94%;
		height: 100%;
		margin: 0 24rpx;
		box-sizing: border-box;
}
.gc {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 50rpx;
		margin: 15rpx;
}
.gcson {
		display: flex;
		align-items: center;
		flex-direction: column;
		font-size: 28rpx
}
.gcson image {
		width: 50rpx;
		height: 55rpx;
		margin: 10rpx;
}
