
.swiper image {
		width: 100%;
}
.icon-fg {
		margin-top: 40rpx;
		display: flex;
		justify-content: center;
}
.icon-fg image {
		width: 250rpx;
		height: 130rpx;
}
.icon-title {
		font-size: 34rpx;
		margin: 20rpx 0;
		text-align: center;
}
.icon-img {
		width: 100%;
		height: 500rpx;
}
.icon-img image {
		width: 100%;
		height: 100%;
}
.shop-list {
		width: 100%;
		height: 590rpx;
		background-color: #FF0000;
		position: relative;
}
.shop {
		width: 95%;
		position: absolute;
		background-color: #fff;
		margin: 0 18rpx;
		left: 0;
		top: -30rpx;
		box-sizing: border-box;
		display: flex;
		justify-content: space-between;
		height: 580rpx;
}
.shop>view {
		width: 33%;
		padding: 20rpx;
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
}
.shop>view view {
		font-size: 22rpx
}
.shop image {
		box-sizing: border-box;
		width: 100%;
		height: 350rpx;
}
